        app:layout_constraintTop_toTopOf="@+id/btn32"
        app:srcCompat="@drawable/back_of_card" />

    <ImageButton
        android:id="@+id/btn31"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toStartOf="@+id/btn02"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toEndOf="@+id/btn00"
        app:layout_constraintTop_toTopOf="@+id/btn30"
        app:srcCompat="@drawable/back_of_card" />

    <ImageButton
        android:id="@+id/btn20"
        android:layout_width="70dp"
