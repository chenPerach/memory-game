        android:id="@+id/btn22"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toStartOf="@+id/btn03"
        app:layout_constraintStart_toEndOf="@+id/btn01"
        app:layout_constraintTop_toTopOf="@+id/btn21"
        app:srcCompat="@drawable/back_of_card" />

    <ImageButton
        android:id="@+id/btn23"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn02"
        app:layout_constraintTop_toTopOf="@+id/btn22"
